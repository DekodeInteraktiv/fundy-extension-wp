{
	"name": "fundraising-extension-wp",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"node": "20",
		"npm": ">=10",
		"yarn": "Please use npm"
	},
	"devDependencies": {
		"@wordpress/env": "~9.7.0",
		"@wordpress/eslint-plugin": "^17.7.0",
		"@wordpress/scripts": "~27.6.0",
		"@wordpress/stylelint-config": "~21.38.0",
		"dotenv": "~16.4.5",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.5",
		"prettier": "^3.2.5",
		"stylelint-order": "^6.0.4"
	},
	"scripts": {
		"prepare": "husky install",
		"build": "wp-scripts build --webpack-copy-php",
		"dev": "wp-scripts start --webpack-copy-php",
		"clean": "rm -rf node_modules build dist .turbo",
		"lint": "npm run lint-js && npm run lint-css && npm run lint-format",
		"lint-js": "wp-scripts lint-js",
		"lint-css": "wp-scripts lint-style",
		"lint-format": "prettier --check .",
		"format": "prettier --write .",
		"lint-staged": "lint-staged",
		"wp-env": "wp-env"
	},
	"lint-staged": {
		"*.css": [
			"wp-scripts lint-style"
		],
		"*.{js,ts,tsx}": [
			"wp-scripts lint-js",
			"prettier --check ."
		]
	}
}
